<div class="card-event-container">
  <div class="card-event">

    <div class='card-event-thumbnail' style="<%= "background-image: linear-gradient(rgba(0, 0, 0, 0.3), rgba(0, 0, 0, 0.7)) ,url(#{@event.photos.first.try(:photo)})" %>">
      <div class="card-event-details">
        <div class='card-event-date-container'>
          <div class='card-event-date'>
            <div class='card-event-date-digit'>
              <%= @event.starts_at.strftime("%-d") %>
            </div>
            <div class='card-event-date-month'>
              <%= @event.starts_at.strftime("%b") %>
            </div>
          </div>
        </div>
        <div class='card-event-details-gen'>
          <div class='card-event-artist'>
            <%= @event.artist %>
          </div>
          <div class='card-event-club'>
            <%= @club.name %>, <%= @club.address %>
          </div>
        </div>
      </div>
    </div>
    <%= link_to "BOOK A TABLE", tables_path(club_id: @club.id, event_id: @event.id), class: "card-event-cta" %>

  </div>
</div>








