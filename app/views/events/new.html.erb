<h1>Events#new</h1>
<p>Find me in app/views/events/new.html.erb</p>


<div class="container">
<h1 class="text-center">New Event</h1>

<%= simple_form_for @event do |f| %>
    <%= f.input :starts_at %>
    <%= f.input :dress_code %>
    <%= f.input :description %>
    <%= f.input :photo %>
    <%= f.input :photo_cache, as: :hidden %>


    <%= f.simple_fields_for Photo.new do |p| %>
      <%= p.input :photo %>
      <%= p.input :photo_cache, as: :hidden %>
    <% end %>

    <%= f.button :submit %>
  <% end %>

</div>
