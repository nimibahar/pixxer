<div class="banner">
  <div class="banner-content text-center">
    <h1>PIXXER</h1>
    <p>Own the night!</p>
    <div class="wrapper-form">
      <form class="form-inline" role="form" action="clubs/search">
        <div class="form-group">


          <input type="text" class="form-control" id="homepage-search" name="location" placeholder="Where do you want to party?">


        </div>
        <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
      </form>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
   <% @events.each do |event| %>
   <div class="col-xs-12 col-md-4">
    <%= link_to event_path(event) do %>
    <div class="card small" >
      <div class="card-category"><%= event.starts_at %></div>
      <div class="card-description"> <%= event.club_id %> </div>
    </div>
    <% end %>
  </div>
  <% end %>
</div>
</div>
